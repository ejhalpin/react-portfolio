{
  "name": "react-portfolio",
  "version": "1.0.0",
  "description": "A MERN stack portfolio",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"node server.js\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "dotenv": "^8.1.0",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "sendgrid": "^5.2.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ejhalpin/react-portfolio.git"
  },
  "keywords": [],
  "author": "Eugene Halpin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ejhalpin/react-portfolio/issues"
  },
  "homepage": "https://github.com/ejhalpin/react-portfolio#readme"
}
